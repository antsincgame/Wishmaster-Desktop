{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Wishmaster Desktop",
  "version": "1.0.0",
  "identifier": "com.wishmaster.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ðŸ§ž Wishmaster Desktop",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "deb", "msi", "dmg"],
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"]
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  },
  "plugins": {
    "dialog": {},
    "fs": {
      "scope": ["$HOME/**", "$APPDATA/**", "$DOWNLOAD/**"]
    },
    "shell": {
      "open": true
    }
  }
}
