{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Wishmaster Desktop",
  "version": "1.0.0",
  "identifier": "com.wishmaster.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ðŸ§ž Wishmaster Desktop",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/*"
    ],
    "externalBin": [],
    "copyright": "Â© 2024 Wishmaster Team",
    "category": "Utility",
    "shortDescription": "Local AI Assistant with Voice Cloning",
    "longDescription": "Wishmaster Desktop is a fully local AI assistant powered by llama.cpp with CUDA GPU acceleration. Features include multi-model chat, long-term memory, voice cloning, and digital twin export for fine-tuning.",
    "linux": {
      "appimage": {
        "bundleMediaFramework": true,
        "files": {}
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"],
        "desktopTemplate": "wishmaster.desktop",
        "section": "utils",
        "priority": "optional"
      },
      "rpm": {
        "release": "1",
        "epoch": 0
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15",
      "signingIdentity": null,
      "entitlements": null,
      "frameworks": [],
      "exceptionDomain": null
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "wix": {
        "language": ["en-US", "ru-RU"],
        "template": null,
        "upgradeCode": null
      },
      "nsis": {
        "languages": ["English", "Russian"],
        "displayLanguageSelector": true,
        "installerIcon": "icons/icon.ico",
        "headerImage": null,
        "sidebarImage": null,
        "installMode": "currentUser"
      },
      "allowDowngrades": false
    }
  },
  "plugins": {
    "dialog": {
      "all": true
    }
  }
}
